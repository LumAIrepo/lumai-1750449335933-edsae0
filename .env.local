```env
# Solana RPC Configuration
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL_DEVNET=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL_TESTNET=https://api.testnet.solana.com

# Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# Optional: Custom RPC endpoints (Helius, QuickNode, etc.)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=your-api-key
# NEXT_PUBLIC_SOLANA_RPC_URL=https://your-quicknode-endpoint.solana-mainnet.quiknode.pro/your-api-key/

# Wallet Connect Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your-wallet-connect-project-id

# Application Configuration
NEXT_PUBLIC_APP_NAME=Simple Wallet Connect
NEXT_PUBLIC_APP_URL=http://localhost:3000
```